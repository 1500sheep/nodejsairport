extends layout

block content
    -if(message){
    div#note #{message}
    -}

    h3.header Sign UP
    .row
        form(action='/signup',method='post', class='col s12')
            .row
                .input-field.col.s6
                    input#first_name.validate(placeholder='Placeholder', type='text',name='firtname')
                    label(for='first_name') First Name
                .input-field.col.s6
                    input#last_name.validate(type='text',name='name')
                    label(for='last_name') Last Name
            .row
                .input-field.col.s12
                    input#disabled.validate(disabled='', value='I am not editable', type='text')
                    label(for='disabled') Disabled
            .row
                .input-field.col.s12
                    input#password.validate(type='password',name='password')
                    label(for='password') Password
            .row
                .input-field.col.s12
                    input#email.validate(type='email')
                    label(for='email') Email
            .row
                .col.s12
                    This is an inline input field:
                    .input-field.inline
                        input#email.validate(type='email')
                        label(for='email', data-error='wrong', data-success='right') Email
            button(class="btn waves-effect waves-light", type="submit" ,name="action") Sign Up